{
    "family": "dl-bayesian-mlflow",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/dl-bayesian-mlflow-role",
    "containerDefinitions": [
        {
            "name": "dl-bayesian-mlflow",
            "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/dl-bayesian-mlflow:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 5000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "MLFLOW_TRACKING_URI",
                    "value": "http://localhost:5000"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "mlflow-data",
                    "containerPath": "/mlflow",
                    "readOnly": false
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/dl-bayesian-mlflow",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:5000/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 30
            },
            "cpu": 128,
            "memory": 256,
            "memoryReservation": 128
        }
    ],
    "volumes": [
        {
            "name": "mlflow-data",
            "efsVolumeConfiguration": {
                "fileSystemId": "fs-XXXXXXXX",
                "rootDirectory": "/mlflow",
                "transitEncryption": "ENABLED"
            }
        }
    ],
    "tags": [
        {
            "key": "Project",
            "value": "dl-bayesian"
        },
        {
            "key": "Environment",
            "value": "production"
        }
    ]
}
